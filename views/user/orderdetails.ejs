<%-include('./includes/header') %>
<!DOCTYPE html>
<html>
<head>
  <title>Order Details</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <script src="https://kit.fontawesome.com/a8469362d0.js" crossorigin="anonymous"></script>
  <style>
    /* Add custom CSS styles here */
    .order-table {
      width: 100%;
      border-collapse: collapse;
    }

    .order-table th,
    .order-table td {
      border: 1px solid #ddd;
      padding: 8px;
      text-align: center;
    }

    .product-image {
      width: 80px;
      height: 80px;
      object-fit: cover;
    }
  </style>
</head>
<body>
  <table class="order-table">
    <thead>
      <tr>
        <th>Order ID</th>
        <th>Image</th>
        <th>Product Name</th>
        <th>Price</th>
        <th>Order Status</th>
        
      </tr>
    </thead>
    <tbody>
      <% order.forEach((orderItem, index) => { %>
        <% orderItem.products.forEach((product, productIndex) => { %>
        <tr>
        <td><%= orderItem._id %></td>
        <td><img src="uploads/products/<%=product.img1 %>" alt="Product Image" class="product-image"></td>
        <td><%= product.pname %></td>
        <td>â‚¹<%= product.price %></td>
        <td><%= orderItem.status %>
          <a href="/viewdetails?id=<%=orderItem._id %>" class="btn btn-primary">View</a></td>
      </tr>
      <% }) %>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
<%-include('./includes/footer') %>
