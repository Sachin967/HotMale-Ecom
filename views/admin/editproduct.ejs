      <div class="container-fluid">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title">Edit Product</h4>

            <form class="forms-sample" enctype="multipart/form-data" method="post"
              action="/editproduct?id=<%=products._id %>">
              <div class="form-group">
                <label for="exampleInputName1">Product Name</label>
                <input type="text" name="pname" class="form-control" value="<%=products.pname%>" id="exampleInputName1"
                  placeholder="Product Title" required>
              </div>
              <div class="form-group">
                <label for="exampleInputEmail3">Category</label>


                <select name="categorytitle" id="category">
                  <% categories.forEach((category)=> { %>
                    <option value="<%= category._id %>">
                      <%= category.categorytitle %>
                    </option>
                    <% }) %>
                </select>

              </div>
              <div class="form-group">
                <label for="exampleInputPassword4">Price</label>
                <input type="number" name="price" class="form-control" value="<%=products.price %>"
                  placeholder="Price in rupees" required>
              </div>
              <div class="form-group">
                <label for="exampleTextarea1">Description</label>
                <textarea class="form-control" name="description" id="exampleTextarea1"
                  rows="4"><%= products.description %></textarea>

              </div>


              <!-- File input for multiple images -->
              <div class="mb-3">
                <label for="formFile1" class="form-label">Select 4 Images</label>
                <input class="form-control" name="image1" type="file" id="formFile1" accept="image/*" multiple required>
              </div>
              <!-- Image preview container -->
              <!-- Image preview container -->
              <div id="imagePreview">
                <% if (products.img1) { %>
                  <div class="img-container">
                    <img class="img-preview img-fluid" src="uploads/products/<%= products.img1 %>">
                  </div>
                  <% } %>
                    <% if (products.img2) { %>
                      <div class="img-container">
                        <img class="img-preview img-fluid" src="uploads/products/<%= products.img2 %>">
                      </div>
                      <% } %>
                        <% if (products.img3) { %>
                          <div class="img-container">
                            <img class="img-preview img-fluid" src="uploads/products/<%= products.img3 %>">
                          </div>
                          <% } %>
                            <% if (products.img4) { %>
                              <div class="img-container">
                                <img class="img-preview img-fluid" src="uploads/products/<%= products.img4 %>">
                              </div>
                              <% } %>
                          </div>



              <div class="form-group">
                <label for="exampleTextarea1">Stock</label>
                <input class="form-control" type="number" min="0" value="<%=products.stock%>" name="stock" id=""
                  required>
              </div>

