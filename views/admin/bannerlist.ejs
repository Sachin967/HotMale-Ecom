                      </td>
                      <td><img src="/uploads/products/<%= banner.imageUrls %>" alt="" class="img-fluid"></td>
                      <td>
                        <%= banner.linkURL %>
                      </td>
                      <td>
                        <% if (banner.isActive) { %>
                          <a href="/deactivatebanner?id=<%= banner._id %>" class="btn btn-danger">InActive</a>
                          <% } else { %>
                            <a href="/activatebanner?id=<%= banner._id %>" class="btn btn-success">Active</a>
                            <% } %>
                      </td>
                      <td>
                        <a href="/editbanner?id=<%=banner._id %>" class="btn btn-primary">Edit</a>
                        <a href="#" onclick="deleteBanner('<%=banner._id %>')" class="btn btn-danger">Delete</a>
                      </td>
                    </tr>
                    <% }) %>
                </tbody>
