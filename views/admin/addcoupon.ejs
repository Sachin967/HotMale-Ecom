<script>
function validateForm() {
    var couponCode = document.getElementById("couponId").value;
    var startDate = document.getElementById("startDate").value;
    var validity = document.getElementById("validity").value;
    var discountPercentage = document.getElementById("percentage").value;
    var minPrice = document.getElementById("minprice").value;
    var maxPrice = document.getElementById("maxprice").value;
    var description = document.getElementById("description").value;

    console.log("startDate:", startDate); // Add this line for debugging


    // Reset previous error messages
    resetErrorMessages();

    // Coupon Code validation
    if (couponCode.trim() === "") {
        showError("coupon-error", "Coupon Code cannot be empty.");
        return false;
    }

    // Start Date validation
    if (!isValidDate(startDate)) {
        showError("startdate-error", "Invalid Start Date format.");
        return false;
    }

    // Validity Date validation
    if (!isValidDate(validity)) {
        showError("validity-error", "Invalid Validity Date format.");
        return false;
    }

    if (new Date(validity) <= new Date(startDate)) {
        showError("validity-error", "Validity Date must be after Start Date.");
        return false;
    }

    // Discount Percentage validation
    if (discountPercentage.trim() === "") {
        showError("percent-error", "Discount Percentage cannot be empty.");
        return false;
    }

    if (isNaN(discountPercentage) || discountPercentage < 1 || discountPercentage > 100) {
        showError("percent-error", "Discount Percentage must be a number between 1 and 100.");
        return false;
    }

    // Minimum Price and Maximum Price validation
    if (minPrice.trim() === "" || maxPrice.trim() === "") {
        showError("min-error", "Minimum Price and Maximum Price cannot be empty.");
        return false;
    }

    if (isNaN(minPrice) || isNaN(maxPrice)) {
        showError("min-error", "Minimum Price and Maximum Price must be numbers.");
        return false;
    }

    if (parseFloat(minPrice) >= parseFloat(maxPrice)) {
        showError("min-error", "Minimum Price must be less than Maximum Price.");
        return false;
    }

    // Description validation (you can add your specific rules here)

    return true; // Form will be submitted if all checks pass
}

function isValidDate(dateString) {
    // Check if the date string is in the format YYYY-MM-DD
    var dateRegex = /^\d{4}-\d{2}-\d{2}$/;
    if (!dateRegex.test(dateString)) {
        return false;
    }

    var inputDate = new Date(dateString);

    // Compare the input date to the current date, ignoring the time part
    var currentDate = new Date();
    currentDate.setHours(0, 0, 0, 0); // Set time to midnight
    return inputDate >= currentDate;
}

function showError(errorSpanId, errorMessage) {
    var errorSpan = document.getElementById(errorSpanId);
    if (errorSpan) {
        errorSpan.textContent = errorMessage;
        errorSpan.style.color = "red";
    }
}

function resetErrorMessages() {
    // Clear all error messages
    var errorSpans = document.querySelectorAll(".error-message");
    errorSpans.forEach(function (errorSpan) {
        errorSpan.textContent = "";
    });
}

</script>
