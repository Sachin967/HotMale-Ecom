        <div class="card">
          <div class="card-body">
            <h4>Edit Banner</h4>
            <form action="/editbanner?id=<%=banner._id %>" method="post" enctype="multipart/form-data">
              <div class="form-group">
                <label for="title">Title</label>
                <input type="text" class="form-control" value="<%=banner.title %>" name="title" required>
              </div>
              <div class="form-group">
                <label for="linkURL">Link URL</label>
                <input type="text" class="form-control"  value="<%=banner.linkURL %>" name="linkURL" required>
              </div>
              <div class="mb-3">
                <label for="formFile1" class="form-label">Select Image</label>
                <input class="form-control" name="images" type="file" id="formFile1" accept="image/*">
              </div>
              
              <div id="imagePreview" class="row">
                <div class="col-md-3 mb-3">
                  <div class="img-container">
                    <img class="img-preview img-fluid" src="uploads/products/<%=banner.imageUrls[0] %>">
                  </div>
                  <label>
                    <input type="checkbox" name="removeImage" value="true"> Remove
                  </label>
                </div>
              </div>
              
              <input type="hidden" name="existingImage" value="<%= banner.imageUrls[0] %>">
    
              <button type="submit" class="btn btn-success" >Edit Banner</button>
            </form>
          </div>
        </div>
