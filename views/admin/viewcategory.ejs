            <form>
              <div class="form-group">
                <input type="search" class="form-control" name="search" placeholder="Enter your search query">
              </div>
              <button type="submit" class="btn btn-primary mt-2">Search</button>
            </form>
            <hr> <!-- Add a horizontal line to separate the sections -->
          </div>
          <h3>Add New Category</h3>
          <form action="/addcategory" method="POST">
            <div class="form-group mt-1">
              <label for="categoryName">Category Name:</label>
              <input type="text" class="form-control" id="categorytitle" name="categorytitle" required>
            </div>
            <button type="submit" class="btn btn-primary mt-2">Add Category</button>
          </form>
      
          <table class="table table-bordered mt-4">
            <thead class="thead-light">
              <tr>
                <th>Sno</th>
                <th>Category</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% categories.forEach(function(category, index) { %>
                <tr>
                  <td><%=index + 1 %></td>
                  <td><%=category.categorytitle %></td>
                  <td>
                    <a href="/editcategory?id=<%=category.id %>" class="btn btn-outline-warning">Edit</a>
                    <a href="/deletecategory?id=<%=category.id %>" class="btn btn-danger">Delete</a>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
