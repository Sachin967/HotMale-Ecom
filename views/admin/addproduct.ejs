      <script>
        document.addEventListener('DOMContentLoaded', function () {
          const form = document.querySelector('.forms-sample');
          form.addEventListener('submit', function (event) {
            if (!validateForm()) {
              event.preventDefault();
            }
          });

          function validateForm() {
            const productName = document.getElementById('exampleInputName1').value;
            const price = document.querySelector('input[name="price"]').value;
            const description = document.querySelector('textarea[name="description"]').value;
            const stock = document.querySelector('input[name="stock"]').value;
            const imageInput = document.querySelector('input[name="image1"]');

            let isValid = true;

            // Validate Product Name
            if (productName.trim() === '') {
              isValid = false;
              // Show error for product name
              // Example: document.getElementById('productNameError').textContent = 'Product name is required.';
            }

            // Validate Price
            if (isNaN(price) || parseInt(price) <= 0 || parseInt(price) >= 100000) {
              isValid = false;
              // Show error for price
            }

            // Validate Description
            if (description.trim() === '') {
              isValid = false;
              // Show error for description
            }

            // Validate Stock
            if (isNaN(stock) || parseInt(stock) < 0) {
              isValid = false;
              // Show error for stock
            }

            // Validate Images
            if (imageInput.files.length === 0) {
              isValid = false;
              // Show error for images
              const imageError = document.getElementById('imageError');
              imageError.textContent = 'Please select an image.';
              imageError.classList.remove('d-none'); // Show the error message
            } else {
              const allowedFormats = ['image/jpeg', 'image/png', 'image/gif'];
              const selectedFileType = imageInput.files[0].type;

              if (!allowedFormats.includes(selectedFileType)) {
                isValid = false;
                const imageError = document.getElementById('imageError');
                imageError.textContent = 'Invalid image format. Please select a JPEG, PNG, or GIF image.';
                imageError.classList.remove('d-none');
              } else {
                // Hide the image error message
                const imageError = document.getElementById('imageError');
                imageError.textContent = '';
                imageError.classList.add('d-none');
              }
            }

            return isValid;
          }
        });
      </script>


